/*固定定位*/

.fixed_top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9999999;
}

.fixed_rg {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 100;
}

.fixed_btm {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.fixed_center{
  position: fixed;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  -o-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

/*绝对定位*/



.absolute_top {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}

.absolute_btm {
  position: absolute;
